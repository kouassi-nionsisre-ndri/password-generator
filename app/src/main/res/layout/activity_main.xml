<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_weight="10">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="1"
        tools:context="com.mindestria.app.passwordgenerator.MainActivity">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.07"
            android:gravity="center"
            android:padding="20dp"
            android:text="@string/title_textview"
            android:textAlignment="center"
            android:textSize="14sp"
            tools:layout_editor_absoluteX="8dp"
            tools:layout_editor_absoluteY="227dp" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="13dp"
            android:background="?android:attr/colorButtonNormal"
            android:visibility="visible"
            tools:layout_editor_absoluteX="8dp"
            android:layout_marginBottom="25dp"
            tools:layout_editor_absoluteY="154dp">

        </FrameLayout>

        <Button
            android:id="@+id/passwordActivityButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="25dp"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:layout_marginTop="25dp"
            android:background="@color/colorPrimary"
            android:text="@string/password_activity_button"
            android:textColor="@android:color/white" />

        <Button
            android:id="@+id/anotherActivityButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="25dp"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:background="@color/colorPrimary"
            android:text="@string/another_activity_button"
            android:textColor="@android:color/white" />

        <Button
            android:id="@+id/exitButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="25dp"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:background="@color/colorPrimary"
            android:text="@string/exit_button"
            android:textColor="@android:color/white" />
    </LinearLayout>
</ScrollView>
